<details>
  <summary>Filter books by tags:</summary>
  <form class="filter">
    <button class="clear hidden">Clear selection</button>
    <fieldset class="tag">
      <legend>Select tags</legend>
      {% for tag in tags %}
        <input type="checkbox" id="{{ tag.value }}" value="{{ tag.value }}" name="filter"/>
        <label class="uppercase display-flex flex-align-center padding-1 flex-justify" for="{{ tag.value }}">{{ tag.label }}</label>
      {% endfor %}
    </fieldset>
  </form>
</details>